<!-- service_technician_views.xml -->
<odoo>
    <!-- List View -->
    <record id="view_service_technician_list" model="ir.ui.view">
        <field name="name">service.technician.list</field>
        <field name="model">service.technician</field>
        <field name="arch" type="xml">
            <list string="Technicians">
                <field name="name"/>
                <field name="code"/>
                <field name="center_id"/>
                <field name="country_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="specialty"/>
                <field name="is_active"/>
                <field name="order_count"/>
                <field name="active_order_count"/>
                <field name="done_order_count"/>
                <field name="today_order_count"/>
                <field name="total_revenue"/>
                <field name="avg_rating"/>
                <field name="last_order_date"/>
                <field name="utilization_rate"/>
                <field name="is_busy"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_service_technician_form" model="ir.ui.view">
        <field name="name">service.technician.form</field>
        <field name="model">service.technician</field>
        <field name="arch" type="xml">
            <form string="Technician">
                <header>
                    <button name="action_activate" type="object" string="Activate" invisible="not is_active"/>
                    <button name="action_deactivate" type="object" string="Deactivate" invisible="is_active"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="center_id"/>
                            <field name="country_id"/>
                            <field name="specialty"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="hire_date"/>
                            <field name="capacity_per_day"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Orders">
                            <group>
                                <field name="order_count" readonly="1"/>
                                <field name="active_order_count" readonly="1"/>
                                <field name="done_order_count" readonly="1"/>
                                <field name="today_order_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_revenue" readonly="1"/>
                                <field name="avg_rating" readonly="1"/>
                                <field name="last_order_date" readonly="1"/>
                                <field name="utilization_rate" readonly="1"/>
                                <field name="is_busy" readonly="1"/>
                            </group>
                        </page>

                        <page string="Active Orders">
                            <field name="active_order_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="order_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>

                        <page string="Done Orders">
                            <field name="done_order_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="order_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>

                        <page string="Today's Orders">
                            <field name="today_order_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="order_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Action -->
    <record id="action_service_technician" model="ir.actions.act_window">
        <field name="name">Technicians</field>
        <field name="res_model">service.technician</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_service_technician_root"
              name="Technicians"
              action="action_service_technician" parent="menu_service_center_root"/>
</odoo>
