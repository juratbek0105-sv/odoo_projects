<!-- service_district_views.xml -->
<odoo>
    <!-- List (Tree) View -->
    <record id="view_service_district_list" model="ir.ui.view">
        <field name="name">service.district.list</field>
        <field name="model">service.district</field>
        <field name="arch" type="xml">
            <list string="Districts">
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="is_active"/>
                <field name="population"/>
                <field name="area_km2"/>
                <field name="center_count"/>
                <field name="technician_count"/>
                <field name="active_order_count"/>
                <field name="done_order_count"/>
                <field name="today_order_count"/>
                <field name="total_revenue"/>
                <field name="avg_rating"/>
                <field name="last_order_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_service_district_form" model="ir.ui.view">
        <field name="name">service.district.form</field>
        <field name="model">service.district</field>
        <field name="arch" type="xml">
            <form string="District">
                <header>
                    <button name="action_activate" type="object" string="Activate" invisible="not is_active"/>
                    <button name="action_deactivate" type="object" string="Deactivate" invisible="is_active"/>
                    <button name="action_cleanup_zero_payments" string="Clean zero payments" type="object"/>
                    <button name="action_finish_all_in_progress" string="Finish all" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="state_id"/>
                            <field name="country_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Statistics">
                            <group>
                                <field name="population"/>
                                <field name="area_km2"/>
                                <field name="latitude"/>
                                <field name="longitude"/>
                            </group>
                            <group>
                                <field name="center_count" readonly="1"/>
                                <field name="technician_count" readonly="1"/>
                                <field name="active_order_count" readonly="1"/>
                                <field name="done_order_count" readonly="1"/>
                                <field name="today_order_count" readonly="1"/>
                                <field name="total_revenue" readonly="1"/>
                                <field name="avg_rating" readonly="1"/>
                                <field name="last_order_date" readonly="1"/>
                            </group>
                        </page>

                        <page string="Centers">
                            <field name="center_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="is_active"/>
                                    <field name="state_id"/>
                                </list>
                            </field>
                        </page>

                        <page string="Technicians">
                            <field name="technician_ids" widget="many2many_tags"/>
                        </page>

                        <page string="Orders">
                            <field name="active_order_ids" widget="many2many_tags" string="Active Orders"/>
                            <field name="done_order_ids" widget="many2many_tags" string="Done Orders"/>
                            <field name="today_order_ids" widget="many2many_tags" string="Today's Orders"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Action -->
    <record id="action_service_district" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">service.district</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_service_district_root"
              name="Districts"
              action="action_service_district" parent="menu_service_center_root"/>
</odoo>
