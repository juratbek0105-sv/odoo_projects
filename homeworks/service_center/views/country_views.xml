<odoo>
  <record id="view_service_country_list" model="ir.ui.view">
    <field name="name">service.country.list</field>
    <field name="model">service.country</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="phone_code"/>
        <field name="is_active"/>
        <field name="state_count"/>
        <field name="center_count"/>
        <field name="technician_count"/>
        <field name="active_order_count"/>
        <field name="done_order_count"/>
        <field name="today_order_count"/>
        <field name="total_revenue"/>
        <field name="avg_rating"/>
      </list>
    </field>
  </record>

  <record id="view_service_country_form" model="ir.ui.view">
    <field name="name">service.country.form</field>
    <field name="model">service.country</field>
    <field name="arch" type="xml">
      <form string="Davlat">
        <header>
          <button name="action_activate" type="object" string="Faol qilish" attrs="{'invisible':[('is_active','=',True)]}"/>
          <button name="action_deactivate" type="object" string="Faolsizlantirish" attrs="{'invisible':[('is_active','=',False)]}"/>
          <button name="action_deactivate_empty_centers" type="object" string="Bo‘sh markazlarni o‘chir"/>
          <button name="action_cleanup_zero_payments" type="object" string="0 summali to‘lovlarni o‘chir"/>
          <button name="action_finish_in_progress_orders" type="object" string="Jarayondagilarni yakunlash"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="phone_code"/>
            <field name="is_active"/>
          </group>
          <notebook>
            <page string="Ko‘rsatkichlar">
              <group>
                <field name="state_count"/>
                <field name="center_count"/>
                <field name="technician_count"/>
                <field name="active_order_count"/>
                <field name="done_order_count"/>
                <field name="today_order_count"/>
                <field name="total_revenue"/>
                <field name="avg_rating"/>
                <field name="last_order_date"/>
              </group>
            </page>
            <page string="Markazlar">
              <field name="center_ids">
                <list>
                  <field name="name"/>
                  <field name="code"/>
                  <field name="is_active"/>
                </list>
              </field>
            </page>
            <page string="Buyurtmalar">
              <field name="order_ids">
                <list>
                  <field name="name"/>
                  <field name="state"/>
                  <field name="order_date"/>
                  <field name="total_amount"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_service_country" model="ir.actions.act_window">
    <field name="name">Davlatlar</field>
    <field name="res_model">service.country</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
