<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_service_country_list" model="ir.ui.view">
        <field name="name">service.country.list</field>
        <field name="model">service.country</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="phone_code"/>
                <field name="is_active"/>
                <field name="state_count" widget="integer"/>
                <field name="center_count" widget="integer"/>
                <field name="technician_count" widget="integer"/>
                <field name="active_order_count"/>
                <field name="done_order_count"/>
                <field name="today_order_count"/>
                <field name="total_revenue"/>
                <field name="avg_rating"/>
                <field name="last_order_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_service_country_form" model="ir.ui.view">
        <field name="name">service.country.form</field>
        <field name="model">service.country</field>
        <field name="arch" type="xml">
            <form string="Service Country">
                <header>
                    <button name="action_activate" type="object" string="Activate" invisible="not is_active"/>
                    <button name="action_deactivate" type="object" string="Deactivate" invisible="is_active"/>
                    <button name="action_deactivate_empty_centers" string="Deactivate Empty Centers" type="object"/>
                    <button name="action_cleanup_zero_payments" string="Cleanup Zero Payments" type="object"/>
                    <button name="action_finish_in_progress_orders" string="Finish In Progress Orders" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="phone_code"/>
                        <field name="is_active"/>
                    </group>

                    <notebook>
                        <page string="States">
                            <field name="state_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                </list>
                            </field>
                        </page>

                        <page string="Districts">
                            <field name="district_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="state_id"/>
                                </list>
                            </field>
                        </page>

                        <page string="Centers">
                            <field name="center_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>

                        <page string="Technicians">
                            <field name="technician_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="center_id"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>

                        <page string="Orders">
                            <group>
                                <field name="active_order_count" readonly="1"/>
                                <field name="done_order_count" readonly="1"/>
                                <field name="today_order_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_revenue" readonly="1"/>
                                <field name="avg_rating" readonly="1"/>
                                <field name="last_order_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_service_country_search" model="ir.ui.view">
        <field name="name">service.country.search</field>
        <field name="model">service.country</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter name="active" string="Active" domain="[('is_active','=',True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_service_country" model="ir.actions.act_window">
        <field name="name">Service Countries</field>
        <field name="res_model">service.country</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_service_center_root"
              name="Service Management"/>

    <menuitem id="menu_service_country"
              name="Countries"
              action="action_service_country" parent="menu_service_center_root"/>
</odoo>
