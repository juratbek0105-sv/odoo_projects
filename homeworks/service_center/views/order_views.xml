<!-- service_order_views.xml -->
<odoo>
    <!-- List View -->
    <record id="view_service_order_list" model="ir.ui.view">
        <field name="name">service.order.list</field>
        <field name="model">service.order</field>
        <field name="arch" type="xml">
            <list string="Service Orders">
                <field name="name"/>
                <field name="center_id"/>
                <field name="customer_id"/>
                <field name="technician_id"/>
                <field name="order_date"/>
                <field name="state"/>
                <field name="total_amount"/>
                <field name="payment_total"/>
                <field name="balance_due"/>
                <field name="last_payment_date"/>
                <field name="is_warranty"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_service_order_form" model="ir.ui.view">
        <field name="name">service.order.form</field>
        <field name="model">service.order</field>
        <field name="arch" type="xml">
            <form string="Service Order">
                <header>
                    <button name="action_receive" type="object" string="Receive" statusbar_visible="draft"/>
                    <button name="action_diagnose" type="object" string="Diagnose" statusbar_visible="received"/>
                    <button name="action_start_progress" type="object" string="Start Progress" statusbar_visible="diagnosed"/>
                    <button name="action_finish" type="object" string="Finish" statusbar_visible="in_progress"/>
                    <button name="action_cancel" type="object" string="Cancel" statusbar_visible="draft,received,diagnosed,in_progress"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,received,diagnosed,in_progress,done,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="center_id"/>
                            <field name="customer_id"/>
                            <field name="technician_id"/>
                            <field name="order_date"/>
                        </group>
                        <group>
                            <field name="is_warranty"/>
                            <field name="warranty_days" modifiers="{'invisible': [('is_warranty','=',False)]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                </list>
                            </field>
                            <group>
                                <field name="labor_fee"/>
                                <field name="discount_amount"/>
                                <field name="total_amount" readonly="1"/>
                            </group>
                        </page>

                        <page string="Payments">
                            <field name="payment_ids">
                                <list editable="bottom">
                                    <field name="payment_date"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </list>
                            </field>
                            <group>
                                <field name="payment_total" readonly="1"/>
                                <field name="balance_due" readonly="1"/>
                                <field name="last_payment_date" readonly="1"/>
                            </group>
                        </page>

                        <page string="Ratings">
                            <field name="rating_ids">
                                <list>
                                    <field name="customer_id"/>
                                    <field name="technician_id"/>
                                    <field name="score"/>
                                    <field name="comment"/>
                                    <field name="rating_date"/>
                                </list>
                            </field>
                        </page>

                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_service_order" model="ir.actions.act_window">
        <field name="name">Service Orders</field>
        <field name="res_model">service.order</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_service_order_root"
              name="Orders"
              action="action_service_order" parent="menu_service_center_root"/>
</odoo>
