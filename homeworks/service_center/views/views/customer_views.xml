<odoo>
  <record id="view_service_customer_list" model="ir.ui.view">
    <field name="name">service.customer.list</field>
    <field name="model">service.customer</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="phone"/>
        <field name="email"/>
        <field name="order_count"/>
        <field name="active_order_count"/>
        <field name="balance"/>
        <field name="avg_rating"/>
        <field name="last_order_date"/>
      </list>
    </field>
  </record>

  <record id="view_service_customer_form" model="ir.ui.view">
    <field name="name">service.customer.form</field>
    <field name="model">service.customer</field>
    <field name="arch" type="xml">
      <form string="Mijoz">
        <header>
          <button name="action_settle_debt" type="object" string="Qarzini yop"/>
          <button name="action_cleanup_zero_payments" type="object" string="0 summali to‘lovlarni o‘chir"/>
          <button name="action_cleanup_cancelled_orders" type="object" string="Bekor qilingan buyurtmalarni o‘chir"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="phone"/>
            <field name="phone2"/>
            <field name="email"/>
            <field name="address"/>
          </group>
          <notebook>
            <page string="Buyurtmalar">
              <field name="order_ids">
                <list>
                  <field name="name"/>
                  <field name="state"/>
                  <field name="order_date"/>
                  <field name="total_amount"/>
                  <field name="balance"/>
                </list>
              </field>
            </page>
            <page string="To‘lovlar">
              <field name="payment_ids">
                <list>
                  <field name="name"/>
                  <field name="payment_date"/>
                  <field name="amount"/>
                  <field name="state"/>
                  <field name="method"/>
                </list>
              </field>
            </page>
            <page string="Baholar">
              <field name="rating_ids">
                <list>
                  <field name="order_id"/>
                  <field name="score"/>
                  <field name="rating_date"/>
                  <field name="comment"/>
                </list>
              </field>
            </page>
            <page string="Ko‘rsatkichlar">
              <group>
                <field name="order_count"/>
                <field name="active_order_count"/>
                <field name="done_order_count"/>
                <field name="today_order_count"/>
                <field name="total_payment"/>
                <field name="balance"/>
                <field name="avg_rating"/>
                <field name="last_order_date"/>
                <field name="last_payment_date"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_service_customer" model="ir.actions.act_window">
    <field name="name">Mijozlar</field>
    <field name="res_model">service.customer</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
