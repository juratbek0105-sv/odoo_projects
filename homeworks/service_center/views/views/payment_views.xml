<odoo>
  <record id="view_service_payment_list" model="ir.ui.view">
    <field name="name">service.payment.list</field>
    <field name="model">service.payment</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="order_id"/>
        <field name="customer_id"/>
        <field name="payment_date"/>
        <field name="amount"/>
        <field name="state"/>
        <field name="method"/>
      </list>
    </field>
  </record>

  <record id="view_service_payment_form" model="ir.ui.view">
    <field name="name">service.payment.form</field>
    <field name="model">service.payment</field>
    <field name="arch" type="xml">
      <form string="To‘lov">
        <header>
          <button name="action_confirm" type="object" string="Tasdiqlash" states="draft"/>
          <button name="action_cancel" type="object" string="Bekor qilish" states="draft,confirmed"/>
          <button name="action_reset_to_draft" type="object" string="Qoralama" states="cancelled"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="order_id"/>
            <field name="customer_id"/>
            <field name="payment_date"/>
            <field name="amount"/>
            <field name="method"/>
            <field name="note"/>
          </group>
          <group string="Buyurtma va mijoz ma’lumotlari">
            <field name="order_total"/>
            <field name="order_balance"/>
            <field name="customer_total"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_service_payment" model="ir.actions.act_window">
    <field name="name">To‘lovlar</field>
    <field name="res_model">service.payment</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
