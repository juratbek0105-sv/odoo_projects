<odoo>
  <record id="view_service_part_list" model="ir.ui.view">
    <field name="name">service.part.list</field>
    <field name="model">service.part</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="is_active"/>
      </list>
    </field>
  </record>

  <record id="view_service_part_form" model="ir.ui.view">
    <field name="name">service.part.form</field>
    <field name="model">service.part</field>
    <field name="arch" type="xml">
      <form string="Detal">
        <header>
          <button name="action_activate" type="object" string="Faol qilish" attrs="{'invisible':[('is_active','=',True)]}"/>
          <button name="action_deactivate" type="object" string="Faolsizlantirish" attrs="{'invisible':[('is_active','=',False)]}"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="is_active"/>
            <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_service_part" model="ir.actions.act_window">
    <field name="name">Detal(lar)</field>
    <field name="res_model">service.part</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
