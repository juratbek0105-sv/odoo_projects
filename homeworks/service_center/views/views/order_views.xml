<odoo>
  <record id="view_service_order_list" model="ir.ui.view">
    <field name="name">service.order.list</field>
    <field name="model">service.order</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="center_id"/>
        <field name="customer_id"/>
        <field name="technician_id"/>
        <field name="order_date"/>
        <field name="state"/>
        <field name="total_amount"/>
        <field name="total_payment"/>
        <field name="balance"/>
      </list>
    </field>
  </record>

  <record id="view_service_order_form" model="ir.ui.view">
    <field name="name">service.order.form</field>
    <field name="model">service.order</field>
    <field name="arch" type="xml">
      <form string="Buyurtma">
        <header>
          <button name="action_receive" type="object" string="Qabul qilindi" states="cancel,done"/>
          <button name="action_diagnosed" type="object" string="Diagnostika" states="receive"/>
          <button name="action_in_progress" type="object" string="Jarayonda" states="diagnosed"/>
          <button name="action_finish_if_no_debt" type="object" string="Yakunlash" states="in_progress"/>
          <button name="action_cancel" type="object" string="Bekor qilish" states="receive,diagnosed,in_progress"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="order_date"/>
            <field name="center_id"/>
            <field name="customer_id"/>
            <field name="technician_id"/>
          </group>
          <notebook>
            <page string="Qatorlar">
              <field name="line_ids">
                <list editable="bottom">
                  <field name="part_id"/>
                  <field name="short_name"/>
                  <field name="qty"/>
                  <field name="price"/>
                  <field name="subtotal"/>
                </list>
              </field>
            </page>
            <page string="Toâ€˜lovlar">
              <field name="payment_ids">
                <list>
                  <field name="name"/>
                  <field name="payment_date"/>
                  <field name="amount"/>
                  <field name="state"/>
                </list>
              </field>
            </page>
            <page string="Baholar">
              <field name="rating_ids">
                <list>
                  <field name="score"/>
                  <field name="rating_date"/>
                  <field name="comment"/>
                </list>
              </field>
            </page>
            <page string="Moliyaviy">
              <group>
                <field name="labor_fee"/>
                <field name="discount"/>
                <field name="total_amount"/>
                <field name="total_payment"/>
                <field name="balance"/>
                <field name="last_payment_date"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_service_order" model="ir.actions.act_window">
    <field name="name">Buyurtmalar</field>
    <field name="res_model">service.order</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
