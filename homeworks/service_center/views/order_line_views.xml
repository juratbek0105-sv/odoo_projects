<odoo>
    <!-- LIST VIEW -->
    <record id="view_service_order_rating_list" model="ir.ui.view">
        <field name="name">service.order.rating.list</field>
        <field name="model">service.order.rating</field>
        <field name="arch" type="xml">
            <list string="Ratings">
                <field name="center_id"/>
                <field name="order_id"/>
                <field name="customer_id"/>
                <field name="technician_id"/>
                <field name="score"/>
                <field name="rating_date"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_service_order_rating_form" model="ir.ui.view">
        <field name="name">service.order.rating.form</field>
        <field name="model">service.order.rating</field>
        <field name="arch" type="xml">
            <form string="Rating">
                <sheet>
                    <group>
                        <group>
                            <field name="center_id"/>
                            <field name="order_id"/>
                            <field name="customer_id"/>
                            <field name="technician_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="score"/>
                            <field name="rating_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- ACTION -->
    <record id="action_service_order_rating" model="ir.actions.act_window">
        <field name="name">Ratings</field>
        <field name="res_model">service.order.rating</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_service_order_rating"
              name="Ratings"
              action="action_service_order_rating" parent="menu_service_center_root"/>
</odoo>
