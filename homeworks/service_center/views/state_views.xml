<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_service_state_list" model="ir.ui.view">
        <field name="name">service.state.list</field>
        <field name="model">service.state</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="country_id"/>
                <field name="population"/>
                <field name="area_km2"/>
                <field name="district_count"/>
                <field name="center_count"/>
                <field name="technician_count"/>
                <field name="active_order_count"/>
                <field name="done_order_count"/>
                <field name="today_order_count"/>
                <field name="total_revenue"/>
                <field name="avg_rating"/>
                <field name="last_order_date"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_service_state_form" model="ir.ui.view">
        <field name="name">service.state.form</field>
        <field name="model">service.state</field>
        <field name="arch" type="xml">
            <form string="Service State">
                <header>
                    <button name="action_activate" type="object" string="Activate" invisible="not is_active"/>
                    <button name="action_deactivate" type="object" string="Deactivate" invisible="is_active"/>
                    <button name="action_deactivate_idle_centers" type="object" string="Deactivate centers"/>
                    <button name="action_cleanup_zero_payments" string="Clean zero payments" type="object"/>
                    <button name="action_finish_all_in_progress" string="Finish all" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="country_id"/>
                        <field name="is_active"/>
                    </group>

                    <group>
                        <field name="population"/>
                        <field name="area_km2"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>

                    <notebook>
                        <page string="Districts">
                            <field name="district_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>

                        <page string="Centers">
                            <field name="center_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>

                        <page string="Technicians">
                            <field name="technician_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="center_id"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>

                        <page string="Orders">
                            <group>
                                <field name="active_order_count"/>
                                <field name="done_order_count"/>
                                <field name="today_order_count"/>
                                <field name="total_revenue"/>
                                <field name="avg_rating"/>
                                <field name="last_order_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Action -->
    <record id="action_service_state" model="ir.actions.act_window">
        <field name="name">States</field>
        <field name="res_model">service.state</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_service_state"
              name="States"
              action="action_service_state" parent="menu_service_center_root"/>
</odoo>
