<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Asosiy guruhlar -->
    <record id="group_service_center_user" model="res.groups">
        <field name="name">Service Center User</field>
        <field name="category_id" ref="base.module_category_services"/>
    </record>

    <record id="group_service_center_manager" model="res.groups">
        <field name="name">Service Center Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_service_center_user'))]"/>
    </record>

    <!-- Oddiy foydalanuvchi faqat o‘z yozuvlarini ko‘ra oladi -->
    <record id="rule_service_center_user_own" model="ir.rule">
        <field name="name">Service Center User: Own Records</field>
        <field name="model_id" ref="model_service_center"/>
        <field name="groups" eval="[(4, ref('service_center.group_service_center_user'))]"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <!-- Manager barcha yozuvlarni ko‘ra oladi -->
    <record id="rule_service_center_manager_all" model="ir.rule">
        <field name="name">Service Center Manager: All Records</field>
        <field name="model_id" ref="model_service_center"/>
        <field name="groups" eval="[(4, ref('service_center.group_service_center_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
