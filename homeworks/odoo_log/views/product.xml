<odoo>
    <!-- Product List View -->
    <record id="view_product_list" model="ir.ui.view">
        <field name="name">product.product.list</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>

    <!-- Product Form View -->
    <record id="view_product_form" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="quantity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Action -->
    <record id="action_product" model="ir.actions.act_window">
        <field name="name">Mahsulotlar</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_root" name="Mahsulot boshqaruvi"/>
    <menuitem id="menu_product" name="Mahsulotlar" parent="menu_root" action="action_product"/>
</odoo>
