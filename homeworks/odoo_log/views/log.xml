<odoo>
    <!-- Log List View -->
    <record id="view_log_list" model="ir.ui.view">
        <field name="name">product.log.list</field>
        <field name="model">product.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="username"/>
                <field name="message"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Log Form View -->
    <record id="view_log_form" model="ir.ui.view">
        <field name="name">product.log.form</field>
        <field name="model">product.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="username"/>
                        <field name="message"/>
                        <field name="create_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Log Action -->
    <record id="action_log" model="ir.actions.act_window">
        <field name="name">Loglar</field>
        <field name="res_model">product.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_log" name="Loglar" parent="menu_root" action="action_log"/>
</odoo>
