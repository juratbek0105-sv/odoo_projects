<odoo>
    <record id="view_clinic_prescription_line_list" model="ir.ui.view">
        <field name="name">clinic.prescription.line.list</field>
        <field name="model">clinic.prescription.line</field>
        <field name="arch" type="xml">
            <list string="Prescription Lines">
                <field name="prescription_id"/>
                <field name="medicine_id"/>
                <field name="dosage"/>
                <field name="frequency"/>
                <field name="duration"/>
            </list>
        </field>
    </record>

    <record id="view_clinic_prescription_line_form" model="ir.ui.view">
        <field name="name">clinic.prescription.line.form</field>
        <field name="model">clinic.prescription.line</field>
        <field name="arch" type="xml">
            <form string="Prescription Line">
                <sheet>
                    <group>
                        <field name="prescription_id"/>
                        <field name="medicine_id"/>
                        <field name="dosage"/>
                        <field name="frequency"/>
                        <field name="duration"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_clinic_prescription_line" model="ir.actions.act_window">
        <field name="name">Prescription Lines</field>
        <field name="res_model">clinic.prescription.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_clinic_prescription_line"
              name="Prescription Lines"
              parent="clinic_root_menu"
              action="action_clinic_prescription_line"/>
</odoo>
