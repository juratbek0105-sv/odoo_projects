<odoo>
    <record id="view_clinic_medicine_list" model="ir.ui.view">
        <field name="name">clinic.medicine.list</field>
        <field name="model">clinic.medicine</field>
        <field name="arch" type="xml">
            <list string="Medicines">
                <field name="name"/>
                <field name="generic_name"/>
                <field name="dosage_unit"/>
                <field name="manufacturer"/>
            </list>
        </field>
    </record>

    <record id="view_clinic_medicine_form" model="ir.ui.view">
        <field name="name">clinic.medicine.form</field>
        <field name="model">clinic.medicine</field>
        <field name="arch" type="xml">
            <form string="Medicine">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="generic_name"/>
                        <field name="dosage_unit"/>
                        <field name="manufacturer"/>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="contraindications"/>
                        <field name="incompatible_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_clinic_medicine" model="ir.actions.act_window">
        <field name="name">Medicines</field>
        <field name="res_model">clinic.medicine</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_clinic_medicine"
              name="Medicines"
              parent="clinic_root_menu"
              action="action_clinic_medicine"/>
</odoo>
